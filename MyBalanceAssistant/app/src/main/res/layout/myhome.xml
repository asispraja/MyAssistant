<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
        <include
            layout="@layout/toolbar"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_width="match_parent">

        </include>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff">
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@drawable/gradent"
        android:id="@+id/scan"
        android:layout_margin="1dp"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/scan"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:id="@+id/scanimg"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Scanner"
            android:textSize="20sp"
            android:textColor="#000"
            android:typeface="serif"
            android:fontFamily="@font/mtcorsva"
            android:layout_gravity="bottom"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@+id/scan"
        android:background="@drawable/gradent2"
        android:layout_margin="1dp"
        android:id="@+id/balance"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/balance"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:paddingBottom="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="15sp"
            android:text="Balance Checker"
            android:textAlignment="center"

            android:fontFamily="@font/mtcorsva"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/scan"
        android:layout_below="@+id/balance"
        android:background="@drawable/gradent1"
        android:layout_margin="1dp"
        android:id="@+id/data">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/data"
            android:layout_gravity="center"
            android:paddingBottom="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Pack"
            android:textSize="15sp"
            android:textColor="#000"
            android:typeface="serif"
            android:layout_gravity="bottom"
            android:fontFamily="@font/mtcorsva"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/transfer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/scan"
        android:background="@drawable/gradent7"
        android:layout_margin="1dp"


        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingBottom="20dp"
            android:layout_gravity="right"
            android:src="@drawable/transfer"
           android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer Balance"
            android:textSize="25sp"
            android:fontFamily="@font/mtcorsva"
            android:textColor="#000"
            android:typeface="serif"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginRight="50dp"
        />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/passbook"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/transfer"
        android:background="@drawable/gradent5"
        android:layout_margin="1dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/password"
            android:paddingBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Library"
            android:textSize="15sp"
            android:fontFamily="@font/mtcorsva"
            android:textColor="#000"
            android:typeface="serif"
            android:layout_gravity="bottom"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/others"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/transfer"
        android:layout_toRightOf="@+id/passbook"
        android:background="@drawable/gradent6"
        android:layout_margin="1dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/more"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Sevices"
            android:textSize="15sp"
            android:fontFamily="@font/mtcorsva"
            android:textColor="#000"
            android:typeface="serif"
            android:layout_gravity="bottom"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
    </FrameLayout>



</RelativeLayout>
    </LinearLayout>
